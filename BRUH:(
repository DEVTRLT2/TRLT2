local TreeManager = {}

-- // 1. LOAD DATABASE AXE (EXTERNAL) // --
-- Kita load sekali saja saat module pertama kali dijalankan agar hemat memori
local success, moduleAxe = pcall(function()
    return loadstring(game:HttpGet("https://raw.githubusercontent.com/DEVTRLT2/TRLT2/refs/heads/main/AXE.lumberTyccon2"))()
end)

if not success or type(moduleAxe) ~= "table" then
    warn("GAGAL MEMUAT DATABASE AXE! Script mungkin tidak berjalan optimal.")
    moduleAxe = {} 
end

-- // 2. SERVICES // --
local ReplicatedStorage = game:GetService("ReplicatedStorage")
local Players = game:GetService("Players")
local Workspace = game:GetService("Workspace")
local RunService = game:GetService("RunService")

local LocalPlayer = Players.LocalPlayer
local Interaction = ReplicatedStorage:WaitForChild("Interaction")
local RemoteProxy = Interaction:WaitForChild("RemoteProxy")
local ClientIsDragging = Interaction:WaitForChild("ClientIsDragging")

-- // 3. HELPER FUNCTIONS // --

local function SetPrimaryPart(model)
    if model.PrimaryPart then return end
    for _, v in pairs(model:GetChildren()) do
        if v.Name == "WoodSection" and v:FindFirstChild("ID") and v.ID.Value == 1 then
            model.PrimaryPart = v
            return
        end
    end
end

local function BringWoodToPos(woodModel, targetCFrame)
    SetPrimaryPart(woodModel)
    if not woodModel.PrimaryPart then return end

    -- Spam Ping supaya server "aware"
    for i = 1, 5 do
        ReplicatedStorage.TestPing:InvokeServer()
    end

    task.spawn(function()
        for i = 1, 20 do
            ClientIsDragging:FireServer(woodModel)
        end
    end)

    for i = 1, 20 do
        if woodModel.PrimaryPart then
            woodModel:PivotTo(targetCFrame)
        end
    end
end

-- // 4. CORE LOGIC (GET AXE & CHOP) // --

function TreeManager.GetBestAxe(targetWood)
    local backpack = LocalPlayer:FindFirstChild("Backpack")
    local character = LocalPlayer.Character
    if not backpack then return nil end

    local damageBest = -1
    local axeBest = nil
    
    -- Kumpulkan semua tool dari Backpack DAN Character (yang sedang dipegang)
    local allTools = backpack:GetChildren()
    if character then
        for _, t in pairs(character:GetChildren()) do
            if t:IsA("Tool") then table.insert(allTools, t) end
        end
    end

    for _, tool in ipairs(allTools) do
        local toolNameObj = tool:FindFirstChild("ToolName") -- Cek value ToolName
        local toolName = toolNameObj and toolNameObj.Value or tool.Name -- Fallback ke nama Tool jika value nil

        if moduleAxe[toolName] then
            local axeStats = moduleAxe[toolName]

            -- [[ LOGIKA SPECIAL TREE ]] --
            -- Cek apakah axe ini KHUSUS untuk kayu yang kita target
            if axeStats.SpecialTrees and axeStats.SpecialTrees[targetWood] then
                print("Special Axe Ditemukan: " .. toolName .. " untuk " .. targetWood)
                return tool -- Langsung return, ini prioritas utama!
            end

            -- Jika bukan special, cari yang damage-nya paling sakit
            local currentDamage = axeStats.Damage or 0
            if currentDamage > damageBest then
                damageBest = currentDamage
                axeBest = tool
            end
        end
    end

    if not axeBest then
        warn("Tidak ditemukan Axe yang cocok untuk menebang " .. targetWood)
    end
    
    return axeBest
end

function TreeManager.ChopTree(targetClass)
    local char = LocalPlayer.Character or LocalPlayer.CharacterAdded:Wait()
    local rootPart = char:WaitForChild("HumanoidRootPart")
    local humanoid = char:WaitForChild("Humanoid")
    local savePos = rootPart.CFrame -- Simpan posisi awal pemain

    -- A. Cari Pohon Sesuai Class
    local targetTree = nil
    for _, region in pairs(Workspace:GetChildren()) do
        if region.Name == "TreeRegion" then
            for _, tree in pairs(region:GetChildren()) do
                if tree:IsA("Model") and tree:FindFirstChild("TreeClass") and tree:FindFirstChild("Owner") then
                    -- Filter: Class sesuai, tidak ada owner, dan belum ditebang (RootCut)
                    if tree.TreeClass.Value == targetClass and tree.Owner.Value == nil and not tree:FindFirstChild("RootCut") then
                        if targetClass == "Generic" then
                            -- Filter anti semak-semak untuk Generic
                            if #tree:GetChildren() > 4 then targetTree = tree break end
                        else
                            targetTree = tree break
                        end
                    end
                end
            end
        end
        if targetTree then break end
    end

    if not targetTree then
        print("Pohon tipe " .. targetClass .. " tidak ditemukan di map.")
        return
    end

    print("Target Ditemukan: " .. targetTree.Name)

    -- B. Ambil Axe Terbaik (Memperhitungkan Special Tree)
    local tool = TreeManager.GetBestAxe(targetClass)
    if not tool then return end 

    -- Auto Equip
    if tool.Parent == LocalPlayer.Backpack then
        tool.Parent = char
    end

    -- Ambil stats dari database
    local toolNameVal = tool:FindFirstChild("ToolName") and tool.ToolName.Value or tool.Name
    local axeStats = moduleAxe[toolNameVal]
    local cooldown = axeStats.SwingCooldown or 0.5
    local damage = axeStats.Damage or 1

    -- C. Teleport & Fake Anchor (Bypass)
    local woodSection = nil
    for _, v in pairs(targetTree:GetChildren()) do
        if v.Name == "WoodSection" and v:FindFirstChild("ID") and v.ID.Value == 1 then
            woodSection = v
            break
        end
    end

    if not woodSection then return end

    -- Posisi target: Sedikit di samping pohon biar enak nebangnya
    local targetPositionCFrame = woodSection.CFrame * CFrame.new(3, 0, 3) 
    
    local teleportLoop
    
    local function StopTeleport()
        if teleportLoop then
            teleportLoop:Disconnect()
            teleportLoop = nil
        end
        -- Reset velocity
        if rootPart then
            rootPart.AssemblyLinearVelocity = Vector3.zero
            rootPart.AssemblyAngularVelocity = Vector3.zero
        end
    end

    -- Mulai Loop Teleport (Fake Anchor)
    teleportLoop = RunService.Heartbeat:Connect(function()
        if char and rootPart and char.Parent then
            rootPart.CFrame = targetPositionCFrame
            rootPart.AssemblyLinearVelocity = Vector3.zero 
            rootPart.AssemblyAngularVelocity = Vector3.zero
            
            -- Ubah state humanoid agar tidak glitch
            if humanoid then
                humanoid:ChangeState(Enum.HumanoidStateType.Physics)
            end
        else
            StopTeleport()
        end
    end)

    -- D. Eksekusi Penebangan
    local isChopping = true
    
    local function doChop()
        if not targetTree or targetTree:FindFirstChild("RootCut") then return end
        
        local cutEvent = targetTree:FindFirstChild("CutEvent")
        if cutEvent then
            RemoteProxy:FireServer(cutEvent, {
                ['tool'] = tool,
                ['faceVector'] = Vector3.new(1, 0, 0),
                ['height'] = 0.3,
                ['sectionId'] = 1,
                ['hitPoints'] = damage,
                ['cooldown'] = cooldown,
                ['cuttingClass'] = 'Axe'
            })
        end
    end

    task.spawn(function()
        while isChopping and targetTree and not targetTree:FindFirstChild("RootCut") do
            doChop()
            task.wait(cooldown + 0.1) -- Delay aman + sedikit toleransi
        end
    end)

    -- E. Deteksi Kayu Jatuh & Bring
    local connection
    connection = Workspace.LogModels.ChildAdded:Connect(function(child)
        local owner = child:WaitForChild("Owner", 5)
        
        -- Cek apakah log ini milik kita
        if owner and owner.Value == LocalPlayer then
            isChopping = false 
            connection:Disconnect()
            
            StopTeleport() -- Matikan fake anchor
            
            print("Pohon Tumbang! Mengangkut kayu...")
            task.wait(0.5) -- Tunggu physics sebentar
            
            -- Bring Kayu (Looping sebentar biar gak ketinggalan)
            local bringTime = tick()
            local duration = 4 -- Durasi bring (detik)
            
            while tick() - bringTime < duration do
                 if child.Parent then 
                    BringWoodToPos(child, savePos)
                 end
                 task.wait()
            end

            -- Balik ke posisi asal
            rootPart.CFrame = savePos
            if humanoid then
                humanoid:ChangeState(Enum.HumanoidStateType.GettingUp)
            end
        end
    end)
    
    -- Safety Timeout (30 Detik)
    task.delay(30, function()
        if connection then connection:Disconnect() end
        isChopping = false
        StopTeleport()
    end)
end

return TreeManager
